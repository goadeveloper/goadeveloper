---
import Aside from "../components/layout/Aside.astro";
import Footer from "../components/layout/Footer.astro";
import Header from "../components/layout/Header.astro";
import "../styles/global.css"

export interface Props{
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/goadev.png" />
		<title>GOADeveloper | {title}</title>
	</head>
	<body class="container mx-auto max-w-7xl min-h-dvh grid grid-rows-[auto_1fr_auto]">
		<header class="bg-[#40852C] text-gray-50 p-2">
			<Header />
		</header>
		<main class="py-4 px-2 flex flex-row relative">
			<aside class="absolute right-0 w-1/4 bg-[#7FB86B] px-4 -mt-4 py-4">
				<Aside />
			</aside>
			<section class="w-3/4">
				<slot />
			</section>
		</main>
		<footer class="h-fit py-4 bg-[#3E5E78] text-white">
			<Footer />
		</footer>
	</body>
</html>